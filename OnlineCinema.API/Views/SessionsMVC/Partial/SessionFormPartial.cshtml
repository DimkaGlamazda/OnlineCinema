@model OnlineCinema.BL.Model.SessionView

<p>Session's title:</p>

@Html.TextBoxFor(m => m.Title)
<div>
    <p style="color: crimson">@Html.ValidationMessageFor(model => model.Title)</p>
</div>
<p>Session starts from:</p>
@Html.TextBoxFor(m => m.TimeFrom)
<div>
    <p style="color: crimson">@Html.ValidationMessageFor(model => model.TimeFrom)</p>
</div>
<p>Session ends on:</p>
@Html.TextBoxFor(m => m.TimeTo)
<div>
    <p style="color: crimson">@Html.ValidationMessageFor(model => model.TimeTo)</p>
</div>

<div class="container">
    <div class="row">
        <div class='col-sm-6'>
            <div class="form-group">
                <div class='input-group date' id='datetimepicker3'>
                    <input type='text' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-time"></span>
                    </span>
                </div>
            </div>
        </div>
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker3').datetimepicker({
                    format: 'HH:mm'
                });
            });
        </script>
    </div>
</div>
<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.css" rel="stylesheet" />

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
